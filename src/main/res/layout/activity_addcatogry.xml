<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addcatogry"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginTop="50dp"
        android:text="Cancel"
        android:textColor="#000"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200sp"
        android:layout_height="250sp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@mipmap/book3" />

    <EditText
        android:id="@+id/catogry_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Enter Catogry Name " />

    <Button
        android:id="@+id/add_catogry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150sp"
        android:layout_marginTop="36sp"
        android:layout_marginEnd="48sp"
        android:background="#7B1E58"
        android:text="Save"
        android:textColor="#fff"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:background="@drawable/color"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/btn_text_color"
            android:layout_marginBottom="24dp"
            >

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="14sp"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                app:cb_color="#7042bf"
                app:cb_pressedRingWidth="8dip" />

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#7fc33a"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#db3a4b"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#5097f7"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/btn_text_color"
            android:layout_marginBottom="24dp"
            >
            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#f8aa43"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#7184ea"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#775484"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#c0676a"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/btn_text_color"
            android:layout_marginBottom="24dp"
            >
            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#c7283b"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#a44e5d"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#a25bcd"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />

            <at.markushi.ui.CircleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cb_color="#c0676a"
                app:cb_pressedRingWidth="8dip"
                android:drawableStart="@drawable/ic_radio_button_unchecked_black_24dp"
                android:textColor="#111"
                android:layout_marginEnd="14sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>