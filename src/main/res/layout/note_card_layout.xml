<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/cardBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="14dp"
            android:paddingEnd="8dp"
            >
            <TextView
                android:id="@+id/noteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_plans_for_weekend"
                android:textSize="18sp"
                android:textColor="@color/colortext"
                android:drawablePadding="8sp"
                android:drawableStart="@drawable/ic_check_circle_black_24dp"
                />
            <TextView
                android:id="@+id/noteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18/06/12"
                android:textSize="18dp"
                android:layout_marginStart="48dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/noteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/top_thing_to_see_during_a_holiday_in_hong_kong_and_many_other_places"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="14dp"
            />
    </LinearLayout>


</LinearLayout>